<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a2bsystem.casse">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_casse"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_casse"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.connection.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.listecasses.ListeCasses" />
        <activity android:name=".Activities.config.Config" />
        <activity android:name=".Activities.transfert.Transfert" />
        <activity android:name=".Activities.casse.CasseActivity" />
        <activity android:name=".Activities.modifarticle.ModifArticle" />
        <activity android:name=".Activities.nouvellecasse.NouvelleCasse" />
        <activity android:name=".Activities.saisiearticle.SaisieManuelle" />
        <activity android:name=".Activities.saisiearticle.ChoixArticle" />
        <activity android:name=".Activities.saisiearticle.SaisieArticle" />
        <activity android:name=".Activities.saisiearticle.ScanQRCode"></activity>
    </application>

</manifest>