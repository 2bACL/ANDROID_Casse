<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.saisiearticle.SaisieManuelle">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_congig_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary"/>


        /*Article*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saisie_artcile1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="end"
                android:text="Article"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_artcile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:focusable="false"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        /*Date*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/modif_date1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:gravity="bottom|end"
                android:text="Date"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:inputType="number"
                android:focusable="false"
                android:imeOptions="flagNoExtractUi"
                />
            <Button
                android:id="@+id/saisie_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:onClick="setDate"
                android:text="Modifier"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


        /*Pa net*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saisie_pa_net1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="end"
                android:text="PA net"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_pa_net2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        /*Pa brut*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saisie_pa_brut1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="end"
                android:text="PA brut"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_pa_brut2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>


        /*quantite*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saisie_quantite1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="end"
                android:text="QuantitÃ©"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_quantite2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>


        /*PVC*/
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saisie_pvc1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="end"
                android:text="PVC"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/saisie_pvc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="17dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        /*Commentaire*/

        <TextView
            android:id="@+id/saisie_comm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="Commentaire :"
            android:textColor="@color/colorAccent"
            android:textSize="17dp" />



        <EditText
            android:id="@+id/saisie_comm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="50" />


        <Button
            android:id="@+id/article_casse_saisie_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="Valider"
            android:textSize="14dp" />


    </LinearLayout>
</LinearLayout>