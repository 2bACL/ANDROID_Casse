<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.config.Config">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_config_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        /*Foretagkod*/

        <TextView
            android:id="@+id/config_foretagkod1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="CODE SOC."
            android:textColor="@color/colorAccent"
            android:textAlignment="viewEnd"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/config_foretagkod2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="9999"
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:maxLines="1"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        /*URL*/

        <TextView
            android:id="@+id/config_url1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="URL"
            android:textColor="@color/colorAccent"
            android:textAlignment="viewEnd"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/config_url2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="http://192.168.0.3/casse/"
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:maxLines="1"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        /*CONFIG*/

        <TextView
            android:id="@+id/config_api_node1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="CONFIG"
            android:textColor="@color/colorAccent"
            android:textAlignment="viewEnd"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/config_api_node2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="IIBMASTERDEV"
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        /*CONFIG*/

        <TextView
            android:id="@+id/config_merchandiser1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="MERCH"
            android:textColor="@color/colorAccent"
            android:textAlignment="viewEnd"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/config_merchandiser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="MERCHANDISER"
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        /*DEPOT*/

        <TextView
            android:id="@+id/config_depot1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="DEPOT"
            android:textColor="@color/colorAccent"
            android:textAlignment="viewEnd"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/config_depot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="DEPOT"
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/articles_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="MAJ ARTICLES"
            android:textSize="14dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/clients_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:text="MAJ CLIENTS"
            android:textSize="14dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <Button
        android:id="@+id/config_valid_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Valider"
        android:textSize="14dp" />



</LinearLayout>