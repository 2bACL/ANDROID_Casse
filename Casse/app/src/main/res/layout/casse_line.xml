<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/casseLine"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/casseFirstLine"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/casse_article"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="12dp"
            android:text="article" />

        <TextView
            android:id="@+id/casse_qte"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:gravity="center|right"
            android:textSize="12dp"
            android:text="qte" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/casseSecondLine"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/casse_livraison"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="12dp"
            android:text="date" />


        <View
            android:id="@+id/casse_state"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/red"/>

        <TextView
            android:id="@+id/casse_pa_net"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12dp"
            android:text="pa net" />

        <TextView
            android:id="@+id/casse_pvc"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center|right"
            android:textSize="12dp"
            android:text="pvc" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/casseThirdLine"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/casse_commentaire"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="12dp"
            android:text="commentaire"
            android:maxLines="1"
            android:maxLength="50"/>


    </LinearLayout>

</LinearLayout>

